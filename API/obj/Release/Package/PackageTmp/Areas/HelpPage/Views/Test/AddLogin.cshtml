@{
    Layout = null;
}
@model ViewModel.AddLogin
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddLogin</title>
    <style type="text/css">
        tr input {
            margin: 5px 0;
        }

        th {
            text-align: right;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("AddLogin", "Test", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <table>
                <tr>
                    <th>
                        用户名：
                    </th>
                    <td>
                        @Html.TextBoxFor(model => model.LoginName)
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <th>
                        登录密码：
                    </th>
                    <td>
                        @Html.PasswordFor(model => model.Password)
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center;">
                        <input type="submit" value="添  加" />
                    </td>
                    <td></td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
